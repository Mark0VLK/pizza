<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-9" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="dishes_order"/>
            </not>
        </preConditions>

        <createTable tableName="dishes_order">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="quantity" type="integer" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="dish_id" type="bigint">
                <constraints nullable="false" foreignKeyName="dish_order_dish_id_fk" references="dishes(id)"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false" foreignKeyName="dish_order_order_id_fk" references="orders(id)"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="order_id, dish_id" constraintName="dishes_order_pk" tableName="dishes_order"/>
    </changeSet>


    <changeSet id="v1-9.2" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="dishes_order"/>
                <not>
                    <sequenceExists sequenceName="dishes_order_id_seq"/>
                </not>
            </and>
        </preConditions>

        <sql>
            CREATE SEQUENCE dishes_order_id_seq;
        </sql>

        <sql>
            ALTER SEQUENCE dishes_order_id_seq OWNED BY dishes_order.id;
        </sql>

        <sql>
            ALTER TABLE dishes_order
                ALTER COLUMN id SET DEFAULT nextval('dishes_order_id_seq'::regclass);
        </sql>
    </changeSet>

</databaseChangeLog>