<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-5" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="locations"/>
            </not>
        </preConditions>

        <createTable tableName="locations">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="changed" type="timestamp(6)"/>
            <column name="city" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp(6)">
                <constraints nullable="false"/>
            </column>
            <column name="flat" type="varchar(10)"/>
            <column name="floor" type="integer"/>
            <column name="house" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="location_street_index" tableName="locations">
            <column name="street"/>
        </createIndex>
        <createIndex indexName="location_city_index" tableName="locations">
            <column name="city"/>
        </createIndex>
    </changeSet>


    <changeSet id="v1-5.2" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="locations"/>
                <not>
                    <sequenceExists sequenceName="locations_id_seq"/>
                </not>
            </and>
        </preConditions>

        <sql>
            CREATE SEQUENCE locations_id_seq;
        </sql>

        <sql>
            ALTER SEQUENCE locations_id_seq OWNED BY locations.id;
        </sql>

        <sql>
            ALTER TABLE locations
                ALTER COLUMN id SET DEFAULT nextval('locations_id_seq'::regclass);
        </sql>
    </changeSet>

</databaseChangeLog>