<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-11" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="pizza_order"/>
            </not>
        </preConditions>

        <createTable tableName="pizza_order">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="quantity" type="integer" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false" foreignKeyName="pizza_order_order_id_fk" references="orders(id)"/>
            </column>
            <column name="pizza_id" type="bigint">
                <constraints nullable="false" foreignKeyName="pizza_order_pizza_id_fk" references="pizzas(id)"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="order_id, pizza_id" constraintName="pizza_order_pk" tableName="pizza_order"/>
    </changeSet>


    <changeSet id="v1-11.2" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="pizza_order"/>
                <not>
                    <sequenceExists sequenceName="pizza_order_id_seq"/>
                </not>
            </and>
        </preConditions>

        <sql>
            CREATE SEQUENCE pizza_order_id_seq;
        </sql>

        <sql>
            ALTER SEQUENCE pizza_order_id_seq OWNED BY pizza_order.id;
        </sql>

        <sql>
            ALTER TABLE pizza_order
                ALTER COLUMN id SET DEFAULT nextval('pizza_order_id_seq'::regclass);
        </sql>
    </changeSet>

</databaseChangeLog>