<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="categories"/>
            </not>
        </preConditions>

        <createTable tableName="categories">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="changed" type="timestamp(6)"/>
            <column name="created" type="timestamp(6)">
                <constraints nullable="false"/>
            </column>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="name" constraintName="idx_category_name_uniq" tableName="categories"/>
    </changeSet>


    <changeSet id="v1-1.2" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="categories"/>
                <not>
                    <sequenceExists sequenceName="categories_id_seq"/>
                </not>
            </and>
        </preConditions>

        <sql>
            CREATE SEQUENCE categories_id_seq;
        </sql>

        <sql>
            ALTER SEQUENCE categories_id_seq OWNED BY categories.id;
        </sql>

        <sql>
            ALTER TABLE categories
                ALTER COLUMN id SET DEFAULT nextval('categories_id_seq'::regclass);
        </sql>
    </changeSet>

</databaseChangeLog>