<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v2-1" author="Mark Valkanouski">

        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="users" columnName="login"/>
            </not>
        </preConditions>

        <addColumn tableName="users">
            <column name="login" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addUniqueConstraint columnNames="login" constraintName="idx_user_login_uniq" tableName="users"/>
    </changeSet>

</databaseChangeLog>
